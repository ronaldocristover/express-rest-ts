{
  "name": "boiler-api",
  "private": true,
  "version": "1.0.0",
  "description": "Node.js TypeScript API with microservices architecture",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prettier": "prettier --write src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "audit": "yarn audit",
    "audit:fix": "yarn audit fix"
  },
  "workspaces": [
    "services/*",
    "libs/*"
  ],
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "redis": "^4.6.10",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "prisma": "^5.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "prisma",
    "mysql",
    "redis",
    "microservices"
  ],
  "author": "",
  "license": "MIT",
  "_moduleAliases": {
    "@": "dist/src",
    "@/config": "dist/src/config",
    "@/middleware": "dist/src/middleware",
    "@/utils": "dist/src/utils",
    "@/types": "dist/src/types",
    "@/services": "dist/services",
    "@/libs": "dist/libs"
  }
}
